<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/messageBackground">

    <TextView
        android:id="@+id/message_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="walid@email.com"
        app:layout_constraintLeft_toLeftOf="@+id/message_user_name"
        app:layout_constraintBottom_toTopOf="@+id/message_text"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        android:textColor="@color/authui_inputTextColorDark"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="19-11-2017 (14:33:25)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/message_text"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/authui_inputTextColorDark"/>

    <TextView
        android:text="Walid: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_user_name"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/message_text"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/authui_inputTextColorDark"/>

    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:text="Hi there.\nHow have you been?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/message_user_name"
        android:layout_marginStart="8dp"
        android:textColor="@color/authui_inputTextColorDark"/>

</android.support.constraint.ConstraintLayout>