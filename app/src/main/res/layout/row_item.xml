<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/row_item">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/colorMessageBackground"
        android:id="@+id/message_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/message_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="walid@email.com"
            android:textSize="12sp"
            android:textColor="@color/authui_inputTextColorDark"
            app:layout_constraintLeft_toLeftOf="@+id/message_user_name"
            app:layout_constraintBottom_toTopOf="@+id/message_text"/>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19-11-2017 (14:33:25)"
            app:layout_constraintRight_toRightOf="@+id/message_text"
            app:layout_constraintBottom_toTopOf="@+id/message_text"
            android:textSize="12sp"
            android:textColor="@color/authui_inputTextColorDark"
            />

        <TextView
            android:text="Walid: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_user_name"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:textColor="@color/authui_inputTextColorDark"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/message_text"/>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hi there.\nHow have you been?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            android:textColor="@color/authui_inputTextColorDark"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintLeft_toRightOf="@+id/message_user_name"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>